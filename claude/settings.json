{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "echo $TMUX_PANE > ~/.claude-tmux-pane && tmux rename-window -t \"$TMUX_PANE\" 'âš  CLAUDE WAITING'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f ~/.claude-tmux-pane && tmux set-window-option -t \"$(cat ~/.claude-tmux-pane)\" automatic-rename on && rm ~/.claude-tmux-pane || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f ~/.claude-tmux-pane && tmux set-window-option -t \"$(cat ~/.claude-tmux-pane)\" automatic-rename on && rm ~/.claude-tmux-pane || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git remote:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go mod:*)",
      "Bash(go fmt:*)",
      "Bash(go vet:*)",
      "Bash(ls:*)",
      "Bash(ls)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(go list:*)",
      "Bash(go doc:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh api:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(gh search prs:*)",
      "Bash(cat:*)",
      "Bash(cut:*)",
      "Bash(docker:*)",
      "Bash(pbcopy:*)",
      "Bash(pbcopy)",
      "Bash(pbpaste:*)",
      "Bash(pbpaste)"
    ]
  },
  "model": "us.anthropic.claude-opus-4-5-20251101-v1:0",
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
